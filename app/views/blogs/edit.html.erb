<%= form_for(@blog) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
<%=f.label :title%>
<%=f.text_field :title %>
<%= f.text_area :content, placeholder: "Compose new blog..." ,class: 'form-control'%>
</div>
<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>